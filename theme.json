{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "primary", "name": "Primary", "color": "#0ea5e9" },
        { "slug": "dark", "name": "Dark", "color": "#0b1220" },
        { "slug": "light", "name": "Light", "color": "#f8fafc" }
      ]
    },
    "typography": {
      "fontFamilies": [
        { "slug": "system-sans", "name": "System Sans", "fontFamily": "ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica Neue, Arial" }
      ],
      "fluid": true
    },
    "spacing": { "units": ["px","em","rem","vh","vw"] },
    "custom": { "container": { "max": "1200px", "pad": "1rem" } }
  },
  "styles": {
    "typography": { "fontFamily": "var(--wp--preset--font-family--system-sans)" },
    "color": { "background": "var(--wp--preset--color--light)", "text": "var(--wp--preset--color--dark)" }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}
