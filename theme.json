{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "name": "Primary",
                    "color": "#00CBEC"
                },
                {
                    "slug": "secondary",
                    "name": "Secondary",
                    "color": "#00CB98"
                },
                {
                    "slug": "accent",
                    "name": "Light",
                    "color": "#A27BE5"
                },
                {
                    "slug": "base",
                    "name": "Base",
                    "color": "#07272E"
                },
                {
                    "slug": "base-alt",
                    "name": "BaseAlt",
                    "color": "#062329"
                },
                {
                    "slug": "foreground",
                    "name": "BaseAlt",
                    "color": "#FFFFFF"
                },
                {
                    "slug": "on-gradient",
                    "name": "On Gradient (Text)",
                    "color": "#11111F"
                }
            ],
            "gradients": [
                {
                    "slug": "brand",
                    "name": "Brand Gradient",
                    "gradient": "linear-gradient(90deg, var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--primary) 50%, var(--wp--preset--color--accent) 100%)"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Onest, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
                    "name": "Onest",
                    "slug": "onest"
                }
            ],
            "fluid": true
        },
        "spacing": {
            "margin": false,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "custom": {
            "container": {
                "max": "1410px",
                "pad": "1rem"
            },
            "button": {
                "min-height": "48px",
                "px": "24px",
                "py": "12px"
            }
        }
    },
    "styles": {
        "blocks": {
            "core/button": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--custom--button--py)",
                        "bottom": "var(--wp--custom--button--py)",
                        "left": "var(--wp--custom--button--px)",
                        "right": "var(--wp--custom--button--px)"
                    }
                },
                "variations": {
                    "primary": {
                        "color": {
                            "background": "var(--wp--preset--color--primary)",
                            "text": "var(--wp--preset--color--on-gradient)"
                        }
                    },
                    "secondary": {
                        "color": {
                            "gradient": "var(--wp--preset--color--secondary)",
                            "text": "var(--wp--preset--color--on-gradient)"
                        }
                    },
                    "gradient": {
                        "color": {
                            "gradient": "var(--wp--preset--gradient--brand)",
                            "text": "var(--wp--preset--color--on-gradient)"
                        }
                    },
                    "icon-white": {
                        "color": {
                            "background": "var(--wp--preset--color--foreground)",
                            "text": "var(--wp--preset--color--on-gradient)"
                        }
                    }
                },
                "css": ".wp-block-button__link{min-height:var(--wp--custom--button--min-height);display:inline-flex;align-items:center;}"
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--onest)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            }
        },
        "color": {
            "text": "var(--wp--preset--color--foreground)",
            "background": "var(--wp--preset--color--base)"
        },
        "spacing": {
            "padding": {
                "top": "1rem",
                "right": "1rem",
                "bottom": "1rem",
                "left": "1rem"
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}