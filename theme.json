{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "primary", "name": "Primary", "color": "#00CBEC" },
        { "slug": "secondary", "name": "Secondary", "color": "#00CB98" },
        { "slug": "accent", "name": "Light", "color": "#A27BE5" },
        { "slug": "base", "name": "Base", "color": "#07272E" },
        { "slug": "base-alt", "name": "BaseAlt", "color": "#062329" }
      ]
    },
    "typography": {
      "fontFamilies": [
        { "fontFamily": "Onest, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif", "name": "Onest", "slug": "onest" }
      ],
      "fluid": true
    },
    "spacing": { "units": ["px","em","rem","vh","vw"] },
    "custom": { "container": { "max": "1410px", "pad": "1rem" } }
  },
  "styles": {
    "typography": { "fontFamily": "var(--wp--preset--font-family--onest)" },
    "elements": {
      "link": { "color": { "text": "var(--wp--preset--color--primary)" } }
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}
